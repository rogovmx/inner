

<% converter=Iconv.new('Windows-1251','UTF-8') %>

<h1><%= converter.iconv('Сотрудники Живого офиса') %></h1>
<table >
  <tr >
    <th ><%= converter.iconv('ФИО') %></th>

    <th ><%= converter.iconv('Должность') %></th>
    <th ><%= converter.iconv('сотрудник/начальник отдела') %>  </th>
