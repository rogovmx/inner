    <th ><%= converter.iconv('Почта') %></th>

    <th ><%= converter.iconv('Дирекция') %></th>

  </tr>

<% @office1s.each do |office1| %>
  <tr>
    <td >

  <%= converter.iconv(office1.last_name) %>
    <%= converter.iconv(office1.name) %>
     <%= converter.iconv(office1.patronimic) %>

    </td>

    <td><%=h converter.iconv(office1.job) %></td>
    <td>  <%= converter.iconv('начальник отдела') if office1.dir %> <%= converter.iconv('сотрудник') unless office1.dir %> </td>
